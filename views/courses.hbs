<div class="row">
    <div class="col-md-12">
        <br>
        <h2>Courses
            <a href="/courses/add" class="btn btn-success float-right">Add New Course</a> 
        </h2>
        <hr />
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th class="underline">Course Code</th>
                        <th class="underline">Course Description</th>
                        <th class="underline text-right"></th> <!-- New header for the remove button column -->
                    </tr>
                </thead>
                <tbody>
                    {{#if courses.length}}
                        {{#each courses}}
                            <tr>
                                <td class="underline"><a href="/course/{{courseId}}">{{courseCode}}</a></td>
                                <td class="underline"><a href="/students?course={{courseId}}">{{courseDescription}}</a></td>
                                <!-- Add the remove button -->
                                <td class="text-right">
                                    <a href="/course/delete/{{courseId}}" class="btn btn-danger">Remove</a>
                                </td>
                            </tr>
                        {{/each}}
                    {{else}}
                        <tr>
                            <td colspan="3" class="text-center"><strong>{{message}}</strong></td>
                        </tr>
                    {{/if}}
                </tbody>
            </table>
        </div>
    </div>
</div>

<main class="col-md-12"> 
    <form method="POST" action="/courses/add" onsubmit="return validateForm()">
        <fieldset>
            <legend>Personal Information</legend>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Course Code</label>
                        <input class="form-control" type="text" name="courseCode" required />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Course Description</label>
                        <input class="form-control" type="text" name="courseDescription" required />
                    </div>
                </div>
            </div>
        </fieldset>
        <hr />
        <div class="float-right">
            <input type="reset" class="btn btn-secondary" value="Reset Form" />
            <input type="submit" class="btn btn-primary" value="Add Course" />
        </div>
        <br /><br /><br />
    </form>
</main>

<script>
    function validateForm() {
        // Additional validation can be added here if needed.
        return true;
    }
</script>
